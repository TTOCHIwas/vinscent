<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="globals.css" />
        <link rel="stylesheet" href="styleguide.css" />
        <link rel="stylesheet" href="post-page.css" />
    </head>
    <body>
        <div clase="post-page">
            <%- include('gnb_login_post.ejs') %>
            <div class="post-page-frame">
                <div class="post-title-wrapper"><div class="post-title">POSTS</div></div>
                <div class="post-category-and-sortby">
                    <div class="post-category-list">
                        <div class="post-category">
                            <input class="category-radio" type='radio' name='post-category' id='post-all' value='post-all' checked="checked"/>
                            <label for="post-all">all</label>
                        </div>
                        <div class="post-category">
                            <input class="category-radio" type='radio' name='post-category' id='post-fashion' value='post-fashion'/>
                            <label for="post-fashion">fashion</label>
                        </div>
                        <div class="post-category">
                            <input class="category-radio" type='radio' name='post-category' id='post-mood' value='post-mood'/>
                            <label for="post-mood">mood</label>
                        </div>
                        <div class="post-category">
                            <input class="category-radio" type='radio' name='post-category' id='post-unique' value='post-unique'/>
                            <label for="post-unique">unique</label>
                        </div>
                        <div class="post-category">
                            <input class="category-radio" type='radio' name='post-category' id='post-brand' value='post-brand'/>
                            <label for="post-brand">brand</label>
                        </div>
                    </div>
                    <!-- <div class="list-filter">
                        <div class="text-wrapper-2">정렬기준</div>
