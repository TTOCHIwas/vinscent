                        <select class="frame-2">
                            <option class="sort-by-text">좋아요</option>
                            <option class="sort-by-text">좋아요</option>
                            <option class="sort-by-text">좋아요</option>
                        </select>
                    </div> -->
                </div>
                <div class="post-list">
                    <div class="post">
                        <a href=""><img class="post" src="https://i.pinimg.com/736x/0e/13/00/0e1300691c27edde0274d26b911f821d.jpg" /></a>
                    </div>
                </div>
                <div class="post-paging">
                    <div class="frame-5">
                        <i class="fa-solid fa-angles-left" id="first_page"></i>
                        <i class="fa-solid fa-angle-left" id="prev_page"></i>
                        <div class="post-paging-pages">
                        <span class="n">1</span>
                        </div>
                        <i class="fa-solid fa-angle-right" id="next_page"></i>
                        <i class="fa-solid fa-angles-right" id="last_page"></i>
                    </div>
                </div>
            </div>

            <%- include('foot.ejs') %>
        </div>
    </body>
</html>

